<%- include('../partials/header')%>

<h2>Test</h2>
    <body>
        <section id="show-page">
            <div>Location: 
            <%= vacation.location %></div>
            <div>Arrival Date: 
            <%= vacation.arrival.toLocaleDateString() %></div>
            <div>Departure Date: 
            <%= vacation.departure.toLocaleDateString() %></div>
            <div>Companions: 
            <%= vacation.companions %></div>
             <div>Activities: </div>
            <!-- <div><%= vacation.activities %></div> -->
          </section>
    <div id="mySidebar" class="sidebar">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
      <form action="/vacations" method="POST" class="activity-form">

        <label>Activity name:
            <input type="text" name="location" >
          </label><br>
        
          <label>Date:
            <input type="date" name="arrival">
          </label><br>

        <p><label for="w3review">Description:</label></p>
         <textarea id="w3review" name="w3review" rows="4" cols="20"></textarea>
        
          <button type="submit">Add Vacation</button>
    
    </form>
    </div>
    
    <div id="main">
      <button class="openbtn" onclick="openNav()">☰ Add an Activity</button>  
    </div>
    
    <script>
    function openNav() {
      document.getElementById("mySidebar").style.width = "250px";
      document.getElementById("main").style.marginLeft = "250px";
    }
    
    function closeNav() {
      document.getElementById("mySidebar").style.width = "0";
      document.getElementById("main").style.marginLeft= "0";
    }
    </script>
       
    </body>

